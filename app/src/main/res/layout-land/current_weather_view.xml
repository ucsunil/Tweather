<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/city"
        android:text="@string/city"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:padding="@dimen/standard_padding_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/weather_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:padding="@dimen/standard_padding_medium"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/temperature"
                android:text="@string/day_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_padding_xsmall"/>
            <TextView
                android:id="@+id/pressure_humidity"
                android:text="@string/day_pressure_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_padding_xsmall"/>
            <TextView
                android:id="@+id/wind"
                android:text="@string/day_wind_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_padding_xsmall"
                />
            <TextView
                android:id="@+id/cloudiness"
                android:text="@string/cloudiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_padding_xsmall"/>
            <TextView
                android:id="@+id/rain"
                android:text="@string/rain_3h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_padding_xsmall"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>